
@{
    ViewData["Title"] = "Index";
}

@model List<BookViewModel>

<div class="row">
    <div class="col-md-12">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Kurslar</h5>

                <a asp-controller="Books" asp-action="Create" class="btn btn-primary mb-3">Kitab oluştur</a>
                @if(Model != null && Model.Any())
                {
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Resim</th>
                                <th>Kitab isim</th>
                                <th>Fiyat</th>
                                <th>Süre</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><img style="width:72px;" src="@item.Picture" class="img-thumbnail" /></td>
                                    <td>@item.Name</td>
                                    <td>@item.Price</td>
                                    <td>@item.Feature.Pages</td>
                                    <td>
                                        <a asp-controller="Books" asp-action="Update" asp-route-id="@item.Id" class="btn btn-success btn-sm">Güncelle</a>
                                        <a asp-controller="Books" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                <div class="alert alert-info">
                    Kayıtlı kurs bulunamadı
                </div>
                }
                
            </div>
        </div>
    </div>
</div>


