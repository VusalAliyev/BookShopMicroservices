
@{
    ViewData["Title"] = "Index";
}

@model UserViewModel
<div class="row mt-5">

    <div class="col-md-9">
        <div class="card">
            <div class="card-body">

                <h5 class="card-title">User Information</h5>

                <table class="table table-striped">

                    <tr>
                        <td>Username</td>
                        <td>@Model.UserName</td>
                    </tr>
                    <tr>
                        <td>Email</td>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <td>City</td>
                        <td>@Model.City</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
      <div class="col-md-3">
        <div class="list-group">

            <a asp-controller="Books" asp-action="Index" class="list-group-item list-group-item-action">My Books</a>
        </div>
    </div>
</div>

